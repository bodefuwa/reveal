= form_for @scripture do |f|
  - if @scripture.errors.any?
    #error_explanation
      %h2= "#{pluralize(@scripture.errors.count, "error")} prohibited this scripture from being saved:"
      %ul
        - @scripture.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :book
    = f.text_field :book
  .field
    = f.label :chapter
    = f.text_field :chapter
  .field
    = f.label :verser
    = f.text_field :verser
  .field
    = f.label :text
    = f.text_area :text
  .actions
    = f.submit 'Save'
