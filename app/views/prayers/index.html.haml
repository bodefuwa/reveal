%h1 Listing prayers

%table
  %thead
    %tr
      %th Title
      %th Topic
      %th
      %th
      %th

  %tbody
    - @prayers.each do |prayer|
      %tr
        %td= prayer.title
        %td= prayer.topic
        %td= link_to 'Show', prayer
        %td= link_to 'Edit', edit_prayer_path(prayer)
        %td= link_to 'Destroy', prayer, :method => :delete, :data => { :confirm => 'Are you sure?' }

