= form_for @prayer do |f|
  - if @prayer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@prayer.errors.count, "error")} prohibited this prayer from being saved:"
      %ul
        - @prayer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :topic
    = f.text_field :topic
  .actions
    = f.submit 'Save'
